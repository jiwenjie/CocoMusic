<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 最新的 Theme，同样可以实现侧滑栏高度充满屏幕 -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- 侧滑栏与 toolbar 关联时返回键样式颜色 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 为了侧滑栏高度可以充满屏幕 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
        <!-- 为了防止底部导航栏遮住布局 -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="DuplicateDefinition">false</item>
    </style>

    <!-- setting the color about toolbar reference drawerLayout menu -->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- style root (add attribute fitsSystemWindows="true") -->
    <style name="Roots">
        <item name="android:fitsSystemWindows">true</item>
        <!-- this attribute is can make recyclerView's item can under the toolbar -->
        <item name="android:clipToPadding">false</item>
    </style>


    <!-- 之前的 Theme，测试可以侧滑栏导读充满全屏 -->
    <style name="BaseTestTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>

        <!-- 侧滑栏与 toolbar 关联时返回键样式颜色 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

        <!-- 为了侧滑栏高度可以充满屏幕 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- textView style -->
    <style name="NormalTextStyle">
        <item name="android:textColor">@color/alpha_70_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/layout_16_sp</item>
    </style>
</resources>

