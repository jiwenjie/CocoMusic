<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/layout_30_dp"
    android:layout_marginEnd="@dimen/layout_30_dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/layout_6_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_16_dp">

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建歌单"
            android:textColor="@color/dark_l_l"
            android:textSize="@dimen/layout_18_sp"
            android:textStyle="bold" />

        <com.jiwenjie.cocomusic.widget.ClearEditText
            android:id="@+id/dialog_musicListNameEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_50_dp"
            android:layout_marginTop="@dimen/layout_16_dp"
            android:background="@null"
            android:hint="请输入歌单标题"
            android:lines="1"
            android:padding="@dimen/layout_8_dp"
            android:textSize="@dimen/layout_16_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1_dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_8_dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/selectOnlyme"
                style="@style/MyCheckBox"
                android:layout_width="@dimen/layout_30_dp"
                android:layout_height="@dimen/layout_30_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_set_only_me"
                android:textSize="@dimen/layout_14_sp" />

            <TextView
                android:id="@+id/dialog_editTextLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/music_list_name_length_init"
                android:textSize="@dimen/layout_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_8_dp"
            android:layout_marginTop="@dimen/layout_16_dp"
            android:layout_marginEnd="@dimen/layout_8_dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel"
                style="@style/ClickTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingStart="@dimen/layout_10_dp"
                android:paddingTop="@dimen/layout_6_dp"
                android:paddingEnd="@dimen/layout_10_dp"
                android:paddingBottom="@dimen/layout_6_dp"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/layout_14_sp" />

            <TextView
                android:id="@+id/dialog_sure"
                style="@style/ClickTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/layout_25_dp"
                android:gravity="center"
                android:paddingStart="@dimen/layout_10_dp"
                android:paddingTop="@dimen/layout_6_dp"
                android:paddingEnd="@dimen/layout_10_dp"
                android:paddingBottom="@dimen/layout_6_dp"
                android:text="确定"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/layout_14_sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>