<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:elevation="2dp">

    <ImageView
        android:id="@+id/common_menu"
        android:layout_width="@dimen/layout_35_dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/layout_8_dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/layout_8_dp"
        android:src="@drawable/icon_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_mine"
            android:layout_width="@dimen/layout_56_dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_19_sp" />

        <TextView
            android:id="@+id/common_find"
            android:layout_width="@dimen/layout_56_dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/layout_2_dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/alpha_60_white"
            android:textSize="@dimen/layout_16_sp" />

        <TextView
            android:id="@+id/common_friend"
            android:layout_width="@dimen/layout_56_dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/layout_2_dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="朋友"
            android:textColor="@color/alpha_60_white"
            android:textSize="@dimen/layout_16_sp" />

        <TextView
            android:id="@+id/common_video"
            android:layout_width="@dimen/layout_56_dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/layout_2_dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/alpha_60_white"
            android:textSize="@dimen/layout_16_sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/common_search"
        android:layout_width="@dimen/layout_35_dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/layout_8_dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/layout_6_dp"
        android:src="@drawable/icon_search"
        android:tint="@color/white" />
</LinearLayout>